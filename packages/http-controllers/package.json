{
    "name": "@egomobile/http-controllers",
    "version": "0.2.0",
    "description": "Controller framework for @egomobile/http-server module.",
    "main": "lib/index.cjs",
    "module": "lib/index.mjs",
    "types": "lib/index.d.ts",
    "exports": {
        ".": {
            "import": "./lib/index.mjs",
            "require": "./lib/index.cjs",
            "types": "./lib/index.d.ts"
        }
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "scripts": {
        "build": "del ./lib && rollup -c rollup.config.mjs",
        "docs:generate": "del ./docs && typedoc --out ./docs ./src",
        "lint": "eslint -c .eslintrc.cjs --ext .ts src",
        "lint:fix": "eslint --fix -c .eslintrc.cjs --ext .ts src",
        "preinstall": "node ./preinstall.cjs",
        "sandbox": "npm run build && cd ./sandbox && npm start",
        "test": "jest --no-cache"
    },
    "jest": {
        "preset": "ts-jest/presets/js-with-ts",
        "transform": {
            "^.+\\.tsx?$": [
                "ts-jest",
                {
                    "compiler": "./node_modules/typescript"
                }
            ]
        },
        "testEnvironment": "node",
        "testMatch": [
            "**/__tests__/**/*.test.ts"
        ],
        "setupFilesAfterEnv": [
            "./src/setupTests.ts"
        ],
        "globals": {
            "ts-jest": {
                "tsconfig": "tsconfig.json"
            }
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/egomobile/node-http-server.git"
    },
    "keywords": [
        "node",
        "http",
        "http2",
        "http server",
        "backend",
        "router",
        "routing",
        "middleware",
        "server",
        "path matching",
        "controller",
        "mvc",
        "express",
        "connect",
        "testing",
        "unit test",
        "decorator",
        "typescript",
        "nodejs",
        "microservice",
        "ajv",
        "joi",
        "validation",
        "json",
        "yaml",
        "schema",
        "swagger ui",
        "openapi",
        "documentation",
        "esm",
        "cjs",
        "commonjs",
        "ego"
    ],
    "author": "Next.e.GO Mobile SE, Aachen, Germany",
    "license": "LGPL-3.0",
    "files": [
        "index.d.ts",
        "CHANGELOG.md",
        "LICENSE",
        "lib",
        "!lib/**/__tests__/**/*",
        "!lib/**/setupTests.*",
        "preinstall.cjs",
        "README.md"
    ],
    "devDependencies": {
        "@egomobile/http-server": "0.65.0-alpha.382",
        "@egomobile/tsconfig": "^5.0.0",
        "@rollup/plugin-commonjs": "25.0.7",
        "@rollup/plugin-json": "6.0.1",
        "@rollup/plugin-node-resolve": "15.2.3",
        "@rollup/plugin-terser": "0.4.4",
        "@rollup/plugin-typescript": "11.1.5",
        "@types/jest": "29.5.10",
        "@types/js-yaml": "4.0.9",
        "@types/node": "18.18.13",
        "@types/supertest": "2.0.16",
        "axios": "1.6.2",
        "babel-jest": "29.7.0",
        "del-cli": "5.1.0",
        "eslint": "8.54.0",
        "eslint-config-ego": "^0.19.0",
        "jest": "29.7.0",
        "nodemon": "3.0.1",
        "rollup": "4.6.0",
        "supertest": "6.3.3",
        "ts-jest": "29.1.1",
        "ts-node": "10.9.1",
        "tslib": "2.6.2",
        "typedoc": "0.25.3",
        "typescript": "5.2.2"
    },
    "peerDependencies": {
        "@egomobile/http-server": ">= 0.65.0-alpha.382"
    },
    "dependencies": {
        "@types/json-schema": "7.0.15",
        "joi": "17.11.0",
        "js-yaml": "4.1.0",
        "json5": "2.2.3",
        "minimatch": "9.0.3"
    }
}